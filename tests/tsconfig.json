{
  "compilerOptions": {
    "types": ["mocha"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "scripts",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["migrations", "programs", "node_modules", "dist"]
}
